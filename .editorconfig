# EditorConfig helps maintain consistent coding styles across editors and IDEs
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_style = space
indent_size = 4

# Markdown: keep intentional trailing spaces (for line breaks)
[*.md]
trim_trailing_whitespace = false

# YAML (GitHub workflows, configs)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON (VS Code, configs)
[*.json]
indent_style = space
indent_size = 2

# INI/Config files
[*.{ini,conf}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Makefile requires tabs
[Makefile]
indent_style = tab
